<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.aflak.libraries.ui.scan.view.ScanActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_chat_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/rpmValue"
        android:layout_width="19dp"
        android:layout_height="44dp"
        android:layout_below="@+id/activity_chat_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="38dp"
        android:text="0"
        android:visibility="visible"
        tools:text="0" />

    <TextView
        android:id="@+id/activity_chat_messages"
        android:layout_width="wrap_content"
        android:layout_height="492dp"
        android:layout_above="@+id/activity_chat_hello_world"
        android:layout_below="@+id/activity_chat_status"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="117dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="18dp"
        android:scrollbars="vertical"
        android:textSize="18sp" />

    <Button
        android:id="@+id/activity_chat_hello_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/helloWorld"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/upButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_chat_status"
        android:layout_alignBaseline="@+id/rpmValue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:onClick="onUpButton"
        android:text="Up" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/upButton"
        android:layout_alignBottom="@+id/rpmValue"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginBottom="-32dp"
        android:onClick="onDownButton"
        android:text="Down" />

</RelativeLayout>
